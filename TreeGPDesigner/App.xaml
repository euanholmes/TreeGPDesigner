<Application x:Class="TreeGPDesigner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TreeGPDesigner"
             xmlns:vm="clr-namespace:TreeGPDesigner.MVVM.ViewModel"
             xmlns:view="clr-namespace:TreeGPDesigner.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:TutorialsMenuViewModel}">
                <view:TutorialsMenu/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>

                                            <TextBlock Width="150" Foreground="{Binding TextColour}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontFamily="{StaticResource RobotoBold}" Grid.Column="2" Text="Program 10"/>
                                            <Border VerticalAlignment="Center" Grid.Column="0" Width="50" Height="50" Background="Red">
                                                <TextBlock Foreground="{Binding TextColour}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontFamily="{StaticResource RobotoBold}" Text="51"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Viewbox>

                        </Grid>
                    </Border>
                    
                    <!-- Select Button -->
                    <Viewbox Grid.Row="2">
                        <Button IsEnabled="{Binding SelectEnabled}" Command="{Binding SelectCommand}" Style="{DynamicResource NormalButtonStyle}" Content="Select"/>
                    </Viewbox>
                    
                    <!-- Selected Trees Panel -->
                    <Border Style="{DynamicResource Panel1}" Grid.Row="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.25*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0.25*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0.25*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0.25*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Selection 1 Title -->
                            <Viewbox Grid.Column="1" Grid.Row="1">
                                <TextBlock Style="{DynamicResource RegularText}" Text="Selection 1:"/>
                            </Viewbox>
                            
                            <!-- 1st Selected Tree -->
                            <Viewbox Grid.Column="3" Grid.Row="1">
                                <Border Margin="5" Background="{Binding Background}">
                                    <Grid Height="40">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Width="150" Foreground="{Binding TextColour}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontFamily="{StaticResource RobotoBold}" Grid.Column="2" Text="{Binding Selection1Name}"/>
                                        <Border VerticalAlignment="Center" Grid.Column="0" Width="50" Height="50" Background="{Binding Selection1Colour}">
                                            <TextBlock Foreground="{Binding TextColour}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontFamily="{StaticResource RobotoBold}" Text="{Binding Selection1Fitness}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Viewbox>

                            <!-- Selection 2 Title -->
                            <Viewbox Grid.Column="1" Grid.Row="3">
                                <TextBlock Style="{DynamicResource RegularText}" Text="Selection 2:"/>
                            </Viewbox>

                            <!-- 2nd Selected Tree -->
                            <Viewbox Grid.Column="3" Grid.Row="3">
                                <Border Margin="5" Background="{Binding Background}">
                                    <Grid Height="40">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Width="150" Foreground="{Binding TextColour}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontFamily="{StaticResource RobotoBold}" Grid.Column="2" Text="{Binding Selection2Name}"/>
                                        <Border VerticalAlignment="Center" Grid.Column="0" Width="50" Height="50" Background="{Binding Selection2Colour}">
                                            <TextBlock Foreground="{Binding TextColour}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontFamily="{StaticResource RobotoBold}" Text="{Binding Selection2Fitness}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Viewbox>

                            <!-- Selection 3 Title -->
                            <Viewbox Grid.Column="1" Grid.Row="5">
                                <TextBlock Style="{DynamicResource RegularText}" Text="Selection 3:"/>
                            </Viewbox>

                            <!-- 3rd Selected Tree -->
                            <Viewbox Grid.Column="3" Grid.Row="5">
                                <Border Margin="5" Background="{Binding Background}">
                                    <Grid Height="40">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Width="150" Foreground="{Binding TextColour}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontFamily="{StaticResource RobotoBold}" Grid.Column="2" Text="{Binding Selection3Name}"/>
                                        <Border VerticalAlignment="Center" Grid.Column="0" Width="50" Height="50" Background="{Binding Selection3Colour}">
                                            <TextBlock Foreground="{Binding TextColour}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontFamily="{StaticResource RobotoBold}" Text="{Binding Selection3Fitness}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Viewbox>
                        </Grid>
                    </Border>


                </Grid>
            </Grid>
        </Border>
        
        <!--Navigation Buttons-->
        <Grid Grid.Row="4" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.75*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.75*"/>
            </Grid.ColumnDefinitions>

            <!-- Main Menu and Tutorials Menu Navigation Buttons-->
            <Viewbox Grid.Column="0">
                <StackPanel Orientation="Horizontal" >
                    <Button Style="{DynamicResource NavButtonStyle}" Margin="0 0 2.5 0" Command="{Binding NavHomeMenuCommand}" Content="Main Menu"/>
                    <Button Style="{DynamicResource NavButtonStyle}" Margin="2.5 0 0 0" Command="{Binding NavTutorialsMenuCommand}" Content="Tutorials Menu"/>
                </StackPanel>
            </Viewbox>

            <!-- Next Tutorial Navigation Button-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.4*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.4*"/>
                </Grid.RowDefinitions>

                <Viewbox Grid.Row="1">
                    <Button Command="{Binding NavNextCommand}" Style="{DynamicResource NormalButtonStyle}" Content="Next"/>
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

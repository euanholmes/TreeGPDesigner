<Window x:Class="TreeGPDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeGPDesigner"
        xmlns:vm="clr-namespace:TreeGPDesigner.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="960"
        WindowStartupLocation="CenterScreen"
        Background="{Binding Background}">

    <!--Whole Application Content Control-->
    <ContentControl Content="{Binding CurrentView}"/>
</Window>
